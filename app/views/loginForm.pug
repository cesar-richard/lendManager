extends layout.pug

block content
	.container(style="margin-top:40px")
		.row
			.col-sm-6.col-md-4.col-md-offset-4
				.panel.panel-default
					.panel-body
						form(role="form" action="/login" method="POST")
							fieldset
								.row
									.col-sm-12.col-md-10.col-md-offset-1
										.form-group
											.input-group
												span.input-group-addon
													i.glyphicon.glyphicon-user
												input.form-control(placeholder="Username CAS UTC" name="login" type="text" autofocus="")
										.form-group
											.input-group
												span.input-group-addon
													i.glyphicon.glyphicon-lock
												input.form-control(placeholder="Password CAS UTC" name="password" type="password" value="")
										.form-group
											input.btn.btn-lg.btn-primary.btn-block(type="submit" value="Sign in") 
